<div class= "info">
<h3 class="user_info"><%= @user.name %></h3>
<h5 class="user_info"><%= @user.email%></h5>
</div>

<%= link_to("edit", edit_user_path)%>

<div>
 <h3 class="user_info">Grub List</h3> 

    <% for faves in @user.restaurants do %>
      <p>
      <h3 class="favorite"><%= faves.camis %> </h3>
      <h3 class="favorite"><%= faves.grade %></h3>
      <h3 class="favorite"><%= faves.points %></h3>
      <%= link_to 'View', restaurant_path(faves), class: "links" %>
      <%= link_to 'Remove', unfavorite_restaurant_path(faves), :method => :delete, class: "links" %>
      </p>  
    
  <%end%>
</div>